# Базовый образ node.js
FROM node:16-alpine

# Установка рабочего каталога
WORKDIR /app

# копирование package.json и .lock 
COPY package*.json ./

# установка зависимостей
RUN npm ci 

# копирование остальных файлов проекта в раб каталог
COPY . . 

# утстановка переменной окружения для определения номера порта
ENV PORT=3000

# Объявление используемого порта
EXPOSE $PORT

# запуск приложения
CMD ["npm", "start"]

